@Article{Gruber_2009,
  author        = {Nicolas Gruber and Manuel Gloor and Sara E. Mikaloff Fletcher and Scott C. Doney and Stephanie Dutkiewicz and Michael J. Follows and Markus Gerber and Andrew R. Jacobson and Fortunat Joos and Keith Lindsay and Dimitris Menemenlis and Anne Mouchet and Simon A. Müller and Jorge L. Sarmiento and Taro Takahashi},
